<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context=".AtualizacaoUsuarioActivity">

    <EditText
        android:id="@+id/novoEmailEditText"
        android:layout_width="379dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="16dp"
        android:hint="Novo Email"
        android:textColorHint="@color/white"/>

    <EditText
        android:id="@+id/novaPasswordEditText"
        android:layout_width="379dp"
        android:layout_height="51dp"
        android:layout_below="@+id/novoEmailEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="16dp"
        android:hint="Nova Senha"
        android:textColorHint="@color/white"/>

    <Button
        android:id="@+id/atualizarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/novaPasswordEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Atualizar" />

    <Button
        android:id="@+id/configButton"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="130dp"
        android:layout_marginBottom="186dp"
        android:text="Configuração" />

</RelativeLayout>
